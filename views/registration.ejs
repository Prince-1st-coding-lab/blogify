<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Register | Social Blog</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@600;700&display=swap" rel="stylesheet">

  <style>
    :root {
      --bg: #f9fafb;
      --card: #ffffff;
      --text: #111827;
      --muted: #6b7280;
      --border: #e5e7eb;
      --primary: #6366f1;
      --primary-hover: #4f46e5;
      --error: #ef4444;
      --success: #22c55e;
      --radius: 14px;
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --bg: #0f172a;
        --card: #020617;
        --text: #e5e7eb;
        --muted: #94a3b8;
        --border: #1e293b;
      }
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: Inter, system-ui, sans-serif;
      background: var(--bg);
      color: var(--text);
      min-height: 100vh;
    }

    .container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      min-height: 100vh;
    }

    /* Left branding */
    .branding {
      padding: 48px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      background: linear-gradient(135deg, rgba(99,102,241,0.15), transparent);
    }

    .logo {
      font-family: Poppins, sans-serif;
      font-size: 24px;
      font-weight: 700;
      margin-bottom: 32px;
    }

    .branding h1 {
      font-family: Poppins, sans-serif;
      font-size: 36px;
      margin-bottom: 16px;
    }

    .branding p {
      font-size: 16px;
      color: var(--muted);
      max-width: 420px;
    }

    /* Right form */
    .form-wrapper {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 24px;
    }

    .card {
      width: 100%;
      max-width: 460px;
      background: var(--card);
      border-radius: var(--radius);
      padding: 32px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.06);
    }

    .card h2 {
      font-family: Poppins, sans-serif;
      margin-bottom: 8px;
    }

    .card p {
      margin-bottom: 24px;
      color: var(--muted);
    }

    .field {
      margin-bottom: 16px;
    }

    label {
      display: block;
      font-size: 14px;
      margin-bottom: 6px;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"] {
      width: 100%;
      padding: 12px 14px;
      border-radius: 12px;
      border: 1px solid var(--border);
      background: transparent;
      color: var(--text);
      font-size: 14px;
    }

    input:focus {
      outline: none;
      border-color: var(--primary);
    }

    .hint {
      font-size: 12px;
      color: var(--muted);
      margin-top: 4px;
    }

    .password-strength {
      height: 6px;
      border-radius: 6px;
      background: var(--border);
      overflow: hidden;
      margin-top: 6px;
    }

    .password-strength span {
      display: block;
      height: 100%;
      width: 0;
      background: var(--error);
      transition: width 0.3s;
    }

    .terms {
      display: flex;
      gap: 8px;
      font-size: 13px;
      margin: 16px 0;
    }

    .terms a {
      color: var(--primary);
      text-decoration: none;
    }

    button {
      width: 100%;
      padding: 14px;
      border-radius: 14px;
      border: none;
      background: var(--primary);
      color: #fff;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
    }

    button:hover {
      background: var(--primary-hover);
    }

    button:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .divider {
      text-align: center;
      margin: 24px 0;
      font-size: 13px;
      color: var(--muted);
    }

    .social {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .social button {
      background: transparent;
      color: var(--text);
      border: 1px solid var(--border);
    }

    .footer-link {
      margin-top: 20px;
      text-align: center;
      font-size: 14px;
    }

    .footer-link a {
      color: var(--primary);
      text-decoration: none;
      font-weight: 500;
    }

    /* Responsive */
    @media (max-width: 900px) {
      .container {
        grid-template-columns: 1fr;
      }

      .branding {
        padding: 32px 24px;
        text-align: center;
      }

      .branding h1 {
        font-size: 28px;
      }
    }
  </style>
</head>
<body>
  <div class="container">

    <!-- Branding -->
    <section class="branding">
      <div class="logo">Blogify</div>
      <h1>Join a community of writers and readers</h1>
      <p>Create, share, and discover meaningful stories from people around the world.</p>
    </section>

    <!-- Form -->
    <section class="form-wrapper">
      <form class="card">
        <h2>Create your account</h2>
        <p>It takes less than a minute.</p>

        <div class="field">
          <label>Register as</label>
          <div style="display:flex; gap:12px;">
            <label style="display:flex; align-items:center; gap:6px; font-size:14px;">
              <input type="radio" name="role" value="author" checked /> Author
            </label>
            <label style="display:flex; align-items:center; gap:6px; font-size:14px;">
              <input type="radio" name="role" value="admin" /> Admin
            </label>
          </div>
          <div class="hint">Choose how you want to use the platform</div>
        </div>

        <div class="field">
          <label>Full Name</label>
          <input type="text" placeholder="John Doe" required />
        </div>

        <div class="field">
          <label>Username</label>
          <input type="text" placeholder="johndoe" required />
          <div class="hint">This will be your public name</div>
        </div>

        <div class="field">
          <label>Email Address</label>
          <input type="email" placeholder="you@example.com" required />
        </div>

        <div class="field">
          <label>Password</label>
          <input type="password" id="password" required />
          <div class="password-strength"><span id="strength"></span></div>
          <div class="hint">Use at least 8 characters</div>
        </div>

        <div class="field">
          <label>Confirm Password</label>
          <input type="password" required />
        </div>

        <div class="terms">
          <input type="checkbox" required />
          <span>I agree to the <a href="#">Terms</a> & <a href="#">Privacy Policy</a></span>
        </div>

        <button type="submit">Create Account</button>

        <div class="divider">OR</div>

        <div class="social">
          <button type="button">Continue with Google</button>
          <button type="button">Continue with GitHub</button>
        </div>

        <div class="footer-link">
          Already have an account? <a href="login">Log in</a>
        </div>
      </form>
    </section>

  </div>

  <script>
    const password = document.getElementById('password');
    const strength = document.getElementById('strength');

    password.addEventListener('input', () => {
      const value = password.value;
      let score = 0;
      if (value.length >= 8) score++;
      if (/[A-Z]/.test(value)) score++;
      if (/[0-9]/.test(value)) score++;

      if (score === 0) {
        strength.style.width = '0%';
      } else if (score === 1) {
        strength.style.width = '33%';
        strength.style.background = 'var(--error)';
      } else if (score === 2) {
        strength.style.width = '66%';
        strength.style.background = '#f59e0b';
      } else {
        strength.style.width = '100%';
        strength.style.background = 'var(--success)';
      }
    });
  </script>
</body>
</html>
